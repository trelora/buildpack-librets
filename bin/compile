#!/usr/bin/env bash
echo "-----> Installing libRETS"
git clone https://github.com/trelora/libRETS.git
cd libRETS
./autogen.sh
mkdir -p "$BUILD_DIR/app/vendor"
ls -lsa /app
ls -lsa /app/.apt
ls -lsa /app/.apt/usr/include
ls -lsa /app/.apt/usr/include/boost
./configure --disable-dotnet --disable-java --disable-perl --disable-php --disable-python --disable-python3 --disable-node.js --prefix="$BUILD_DIR/app/vendor" --with-boost-prefix="$BUILD_DIR/app/.apt/usr"
make
make install

